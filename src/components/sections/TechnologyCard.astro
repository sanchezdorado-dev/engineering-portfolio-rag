---
import { Icon } from 'astro-icon/components';

interface Props {
  name: string;
  icon: string;
  color?: string;
}

const { name, icon, color = '#60a5fa' } = Astro.props;
---

<div
  style={`--tech-color: ${color};`}
  class="group bg-slate-200 dark:bg-[#030712] rounded-lg p-2 flex flex-col items-center justify-center gap-2 border border-slate-100 dark:border-gray-700/50 transition-all duration-300"
>
  <Icon
    name={`simple-icons:${icon}`}
    class="w-5 h-5 text-gray-700 dark:text-gray-200 group-hover:[color:var(--tech-color)] transition-colors duration-300"
  />
  <span class="text-[11px] font-medium text-gray-900 dark:text-gray-200 text-center leading-tight">
    {name}
  </span>
</div>
