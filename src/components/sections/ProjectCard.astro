---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'projects'>['data'];

type RepoEntry = { label: string; url: string };

const { title, description, thumbnail, repository, liveUrl, hasDemo, skills, status } = Astro.props;

const isString = (r: NonNullable<typeof repository>): r is string =>
  typeof r === 'string';

const skillColorMap: Record<string, string> = {
  'Java': 'bg-orange-50 dark:bg-orange-900/20 border-orange-200 dark:border-orange-700',
  'Java 21': 'bg-orange-50 dark:bg-orange-900/20 border-orange-200 dark:border-orange-700',
  'Spring Boot': 'bg-green-50 dark:bg-green-900/20 border-green-200 dark:border-green-700',
  'Spring Boot 3.4': 'bg-green-50 dark:bg-green-900/20 border-green-200 dark:border-green-700',
  'Python': 'bg-yellow-50 dark:bg-yellow-900/20 border-yellow-200 dark:border-yellow-700',
  'TypeScript': 'bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-700',
  'Angular': 'bg-red-50 dark:bg-red-900/20 border-red-200 dark:border-red-700',
  'Angular 21': 'bg-red-50 dark:bg-red-900/20 border-red-200 dark:border-red-700',
  'React': 'bg-cyan-50 dark:bg-cyan-900/20 border-cyan-200 dark:border-cyan-700',
  'Astro 5.0': 'bg-orange-50 dark:bg-orange-900/20 border-orange-200 dark:border-orange-700',
  'PostgreSQL': 'bg-indigo-50 dark:bg-indigo-900/20 border-indigo-200 dark:border-indigo-700',
  'MongoDB': 'bg-green-50 dark:bg-green-900/20 border-green-200 dark:border-green-700',
  'Docker': 'bg-sky-50 dark:bg-sky-900/20 border-sky-200 dark:border-sky-700',
  'RAG': 'bg-purple-50 dark:bg-purple-900/20 border-purple-200 dark:border-purple-700',
  'Milvus': 'bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-700',
  'HuggingFace': 'bg-yellow-50 dark:bg-yellow-900/20 border-yellow-200 dark:border-yellow-700',
  'Groq': 'bg-teal-50 dark:bg-teal-900/20 border-teal-200 dark:border-teal-700',
  'Zod': 'bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-700',
  'Clean Architecture': 'bg-violet-50 dark:bg-violet-900/20 border-violet-200 dark:border-violet-700',
  'SOLID': 'bg-violet-50 dark:bg-violet-900/20 border-violet-200 dark:border-violet-700',
  'Island Architecture': 'bg-purple-50 dark:bg-purple-900/20 border-purple-200 dark:border-purple-700',
  'Flyway': 'bg-slate-50 dark:bg-slate-900/20 border-slate-200 dark:border-slate-700',
  'JWT/OAuth2': 'bg-amber-50 dark:bg-amber-900/20 border-amber-200 dark:border-amber-700',
  'Signals': 'bg-rose-50 dark:bg-rose-900/20 border-rose-200 dark:border-rose-700',
  'Sass': 'bg-pink-50 dark:bg-pink-900/20 border-pink-200 dark:border-pink-700',
};

const defaultSkillClass = 'bg-slate-100 dark:bg-gray-800 border-slate-200 dark:border-gray-600';

function getSkillClass(skill: string): string {
  return skillColorMap[skill] ?? defaultSkillClass;
}
---

<article class="h-full bg-slate-50 dark:bg-gray-900 rounded-xl overflow-hidden border border-slate-200 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 transition-all duration-300 flex flex-col">
  {thumbnail && (
    <div class="relative h-48 bg-gradient-to-br from-blue-100 to-purple-100 overflow-hidden">
      <img
        src={thumbnail}
        alt={title}
        class="w-full h-full object-cover"
        loading="lazy"
        decoding="async"
      />
    </div>
  )}

  <div class="p-5 flex flex-col flex-1">
    <div class="flex items-center gap-2 mb-2">
      <h3 class="text-[13px] font-bold text-gray-900 dark:text-white">
        {title}
      </h3>
      {status === 'development' && (
        <span class="px-2 py-1 bg-amber-100 dark:bg-amber-900/30 rounded-md text-[11px] font-medium text-amber-700 dark:text-amber-400 border border-amber-200 dark:border-amber-700 shrink-0">
          En Desarrollo
        </span>
      )}
    </div>

    <p class="text-[13px] text-gray-700 dark:text-gray-300 leading-relaxed mb-4 flex-1">
      {description}
    </p>

    <div class="flex flex-wrap gap-2 mb-4">
      {skills.map((skill) => (
        <span class={`px-2 py-1 rounded-md text-[11px] font-medium text-gray-700 dark:text-gray-300 border ${getSkillClass(skill)}`}>
          {skill}
        </span>
      ))}
    </div>

    <div class="flex flex-wrap gap-3 pt-3 border-t border-slate-200 dark:border-gray-600">
        {liveUrl ? (
          <a
            href={liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-[13px] font-medium transition-colors"
          >
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Demo
          </a>
        ) : hasDemo && (
          <span class="flex items-center gap-2 px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-400 dark:text-gray-500 rounded-lg text-[13px] font-medium cursor-not-allowed select-none">
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Demo
          </span>
        )}
        {repository && (
          isString(repository) ? (
            <a
              href={repository}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg text-[13px] font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors"
            >
              <svg class="w-3.5 h-3.5 shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          ) : (
            (repository as RepoEntry[]).map((repo) => (
              <a
                href={repo.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg text-[13px] font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors"
              >
                <svg class="w-3.5 h-3.5 shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                {repo.label}
              </a>
            ))
          )
        )}
      </div>
  </div>
</article>
