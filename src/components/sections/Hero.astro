---
import { Image } from 'astro:assets';
import profilePicture from '../../assets/images/software-engineer-profile.webp';

interface SocialLink {
  href: string;
  label: string;
  external: boolean;
}

const socialLinks: SocialLink[] = [
  { href: 'https://github.com/sanchezdorado-dev', label: 'GitHub', external: true },
  { href: 'https://www.linkedin.com/in/santiago-dorado-sánchez-6933583b3', label: 'LinkedIn', external: true },
  { href: '/docs/software-engineer-cv.pdf', label: 'Curriculum', external: true },
];
---

<section class="flex items-center px-4 py-40 bg-slate-200 dark:bg-[#030712]">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center gap-4 mb-8">
      <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 border-3 border-white dark:border-gray-700 shadow-lg flex-shrink-0 overflow-hidden flex items-center justify-center">
        <Image
          src={profilePicture}
          alt="Santiago - Software Engineer"
          class="w-full h-full object-cover object-center"
          loading="eager"
        />
      </div>

      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-blue-50 dark:bg-blue-900/30 rounded-full border border-blue-200 dark:border-blue-700">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
        </span>
        <span class="text-[11px] font-medium text-blue-700 dark:text-blue-300">
          Disponible para retos técnicos de alto impacto
        </span>
      </div>
    </div>

    <h1 class="text-xl md:text-2xl font-black mb-10 dark:text-white">
      Hola, soy <span class="bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">Santiago</span>
    </h1>

    <p class="text-[13px] text-blue-400 font-medium uppercase tracking-wide mb-6">
      Software Engineer | Java & Spring Boot | RAG & Agentic AI Engineer
    </p>

    <p class="text-[13px] text-gray-600 dark:text-gray-300 leading-relaxed mb-10 max-w-3xl">
      Especializado en el desarrollo de
      <strong class="text-gray-900 dark:text-white">aplicaciones sólidas y microservicios escalables</strong> con
      <strong class="text-[#6db33f]">Spring Boot</strong> e
      <strong class="text-blue-400">interfaces reactivas</strong>. Mi enfoque
      integra el desarrollo de <strong class="text-gray-900 dark:text-white">lógica de negocio robusta</strong> con la
      <strong class="text-purple-500">implementación de IA Generativa (RAG)</strong>,
      transformando requerimientos complejos en soluciones eficientes bajo estándares de
      <strong class="text-gray-900 dark:text-white">Clean Architecture</strong> y principios
      <strong class="text-gray-900 dark:text-white">SOLID</strong>.
      Adicionalmente, participo en el <strong class="text-gray-900 dark:text-white">ciclo de vida del software (SDLC)</strong>
      automatizando flujos de <strong class="text-gray-900 dark:text-white">CI/CD</strong>,
      garantizando la calidad técnica y el rendimiento en cada entrega.
    </p>

    <div class="flex flex-wrap items-center gap-3">
      <a
        href={socialLinks[0]!.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Perfil de GitHub"
        class="inline-flex items-center gap-2 px-4 py-2 text-[13px] bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-all duration-200"
      >
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
        GitHub
      </a>

      <a
        href={socialLinks[1]!.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Perfil de LinkedIn"
        class="inline-flex items-center gap-2 px-4 py-2 text-[13px] bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors duration-200"
      >
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
        </svg>
        LinkedIn
      </a>

      <a
        href={socialLinks[2]!.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Ver Curriculum Vitae"
        class="inline-flex items-center gap-2 px-4 py-2 text-[13px] bg-white dark:bg-gray-800 text-gray-700 dark:text-white rounded-lg font-medium border-2 border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-200"
      >
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Curriculum
      </a>
    </div>
  </div>
</section>
